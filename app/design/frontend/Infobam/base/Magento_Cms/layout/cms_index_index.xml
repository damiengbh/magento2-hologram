<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Add catalog js -->
        <link src="js/catalog.js" />
    </head>
    <body>
        <!-- Remove Categories Menu (Only for homepage at this point) -->
        <referenceBlock name="store.menu" remove="true"/>

        <!-- Remove Page title -->
        <referenceBlock name="page.main.title" remove="true" />
        
        <!-- Remove page content -->
        <referenceBlock name="cms_page" remove="true" />

        <!-- Homepage blocks -->
        <referenceContainer name="content">
            <!-- Add homepage banner -->
            <!-- New cms block for slide -->
            <block class="Magento\Cms\Block\Block" name="homepage_slide" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">homepage_slide</argument>
                </arguments>
            </block>

            <!-- Add search homepage block -->
            <block class="Magento\Framework\View\Element\Template" name="homepage.search" template="Magento_Cms::home/search.phtml" after="homepage.banner" />
            <!-- Add content middle block -->
            <block class="Magento\Framework\View\Element\Template" name="homepage.headline" template="Magento_Cms::home/headline.phtml" after="search" />
            <!-- Add Vehicle and Menu container
            <container name="vehicle-menu" label="Vehicle Menu" as="vehicle-menu" after="content.middle">
                <block class="Rapidoto\Catalog\Block\Category\Topmenu" name="vehicle.model" template="Magento_Cms::vehicle/model.phtml">
                    <block class="Magento\Framework\View\Element\Template" name="vehicle.topmenu" template="Magento_Cms::vehicle/topmenu.phtml" ttl="3600" />
                </block>
            </container>
            -->
            <!-- Add reinsurance block -->
            <block class="Magento\Framework\View\Element\Template" name="homepage.reinsurance" template="Magento_Cms::home/reinsurance.phtml" after="-" />
        </referenceContainer>

        <!-- Place vehicle identification block -->
        <move element="vehicle.identification" destination="content" after="content.top"/>

        <!-- Place brand list block -->
        <move element="brand_list" destination="content" after="vehicle-menu"/>
    </body>
</page>
