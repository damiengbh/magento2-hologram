<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <!-- The goal is to have the footer outside header and main content to be able to stick the footer to the bottom of the document -->

    <!-- Remove page wrapper tag and create a new container in it -->
    <referenceContainer name="page.wrapper" htmlTag="" htmlClass="">
        <container name="page.wrapper.container" htmlTag="div" htmlClass="wrapper" />
    </referenceContainer>
    <referenceContainer name="header.container" htmlId="header" htmlClass="header" />
    <referenceContainer name="footer-container" htmlId="footer" htmlClass="footer" />

    <!-- Move global notices, header and main content in the newly created wrapper. Footer in moved just after this wrapper. -->
    <move element="global.notices" destination="page.wrapper.container" before="-" />
    <move element="header.container" destination="page.wrapper.container" after="global.notices" />
    <move element="main.content" destination="page.wrapper.container" after="header.container" />
    <move element="footer-container" htmlClass="footer" destination="page.wrapper" after="page.wrapper.container" />

    <!-- Remove useless markup -->
    <referenceContainer name="columns" htmlTag="" htmlClass="" />
    <referenceContainer name="main" htmlTag="" htmlClass="" />
</layout>
