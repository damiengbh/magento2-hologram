<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Remove default theme css -->
        <remove src="css/styles-m.css" />
        <remove src="css/styles-l.css" />

        <!-- Add theme css -->
        <css src="css/styles.css" />

        <!-- Add theme js -->
        <link src="js/bootstrap/transition.js" />
        <link src="js/bootstrap/collapse.js" />
        <link src="js/bootstrap/tab.js" />
        <link src="js/bootstrap/modal.js" />
        <link src="js/bootstrap/affix.js" />
        <link src="js/main.js" />
    </head>
    <body>
        <!-- Manage header -->

        <!-- Remove header containing Welcome message -->
        <referenceBlock name="header" remove="true"/>
        <!-- Remove header top links -->
        <referenceBlock name="top.links" remove="true" />
        <!-- Remove header skip to content link -->
        <referenceBlock name="skip_to_content" remove="true" />
        <!-- Remove sections navigation -->
        <referenceBlock name="navigation.sections" remove="true" />

        <!-- Remove header panel and panel wrapper tags -->
        <referenceContainer name="header.panel.wrapper" htmlTag="" htmlClass="" />
        <referenceContainer name="header.panel" htmlTag="" htmlClass="" />

        <!-- Add and organize header content -->
        <referenceContainer name="header-wrapper" htmlClass="header-container">
            <block class="Magento\Framework\View\Element\Template" name="header.toggle" template="Magento_Theme::html/header/toggle.phtml" after="logo" />
            <container name="header.main" label="Header main" htmlTag="div" htmlId="header-main" htmlClass="header-main">
                <container name="header.links" label="Header links" htmlTag="ul" htmlClass="header-links">
                    <block class="Magento\Framework\View\Element\Template" name="header.link.catalog" template="Magento_Theme::html/header/link-catalog.phtml" after="minicart" />
                </container>
                <block class="Magento\Framework\View\Element\Template" name="header.utils" template="Magento_Theme::html/header/utils.phtml" after="header.links" />
                <block class="Magento\Framework\View\Element\Template" name="header.customer.service" template="Magento_Theme::html/header/customer_service.phtml" after="header.utils" />
                <block class="Magento\Framework\View\Element\Template" name="header.networks.links" template="Magento_Theme::html/header/networks.phtml" after="header.customer.service" />
            </container>
        </referenceContainer>

        <!-- Manage main -->

        <!-- Rename main class -->
        <referenceContainer name="main.content" htmlClass="main" />
        <!-- Remove skip to content target -->
        <referenceBlock name="skip_to_content.target" remove="true" />

        <!-- Manage messages -->

        <referenceContainer name="page.messages" htmlClass="container" />

        <!-- Manage footer -->

        <!-- Remove bugs report block -->
        <referenceBlock name="report.bugs" remove="true"/>

        <!-- Footer links to remove -->
        <referenceBlock name="search-term-popular-link" remove="true"/>
        <referenceBlock name="privacy-policy-link" remove="true"/>
        <referenceBlock name="catalog-search-advanced-link" remove="true"/>
        <referenceBlock name="rss-link" remove="true"/>
        <referenceBlock name="contact-us-link" remove="true"/>
        <referenceBlock name="sales-guest-form-link" remove="true"/>

        <!-- Update footer container class -->
        <referenceContainer name="footer" htmlClass="footer-container">
            <container name="footer.links.container" htmlTag="div" htmlClass="footer-links" before="-" />
        </referenceContainer>
        <referenceContainer name="footer">
            <container name="socialtests" htmlTag="div" before="copyright">
                <block class="Magento\Framework\View\Element\Template" name="social.links" template="Magento_Theme::html/footer/networks.phtml" after="-"/>
            </container>
        </referenceContainer>

        <!-- Move the copyright at the end of the footer and move the template -->
        <referenceBlock name="copyright" template="html/footer/copyright.phtml" after="-" />

        <!-- Footer links -->
        <move element="footer_links" destination="footer.links.container" />

        <referenceBlock name="footer_links">
            <arguments>
                <argument name="css_class" xsi:type="string">footer-links__list</argument>
            </arguments>

            <block class="Magento\Framework\View\Element\Html\Link\Current" name="who-are-we">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Suivi de commande et livraison</argument>
                    <argument name="path" xsi:type="string">suivi-de-commande-et-livraison/</argument> <!-- TODO : Put good URL -->
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="contact-us">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Gestion des consignes</argument>
                    <argument name="path" xsi:type="string">gestion-des-consignes/</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="support">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Nos moyens de paiement</argument>
                    <argument name="path" xsi:type="string">nos-moyens-de-paiement/</argument> <!-- TODO : Put good URL -->
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="delivery">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Nos marques</argument>
                    <argument name="path" xsi:type="string">marques.html</argument> <!-- TODO : Put good URL -->
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="need-help">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Nos magasins</argument>
                    <argument name="path" xsi:type="string">nos-magasins/</argument> <!-- TODO : Put good URL -->
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="mentions">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Rejoignez-nous</argument>
                    <argument name="path" xsi:type="string">rejoignez-nous/</argument> <!-- TODO : Put good URL -->
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="conditions">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Mentions légales</argument>
                    <argument name="path" xsi:type="string">mentions-legales/</argument> <!-- TODO : Put good URL -->
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="conditions">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Conditions générales de vente</argument>
                    <argument name="path" xsi:type="string">conditions-generales-de-vente/</argument> <!-- TODO : Put good URL -->
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="conditions">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Gestion des retours</argument>
                    <argument name="path" xsi:type="string">gestion-des-retours/</argument> <!-- TODO : Put good URL -->
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
