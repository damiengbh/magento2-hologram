<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Add print css with media attribute set to all -->
        <css src="css/print.css" media="all" />
    </head>
    <body>
        <!-- Remove default logo and copyright -->
        <referenceBlock name="logo" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>

        <!-- Add print specific logo -->
        <referenceContainer name="main.content">
            <block class="Magento\Theme\Block\Html\Header\Logo" name="logo.print" template="Magento_Theme::html/print/logo.phtml" before="-" />
        </referenceContainer>
    </body>
</page>
